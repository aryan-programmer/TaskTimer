<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<TextView
			android:id="@+id/task_list_item__name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:textColor="@color/primaryTextColor"
			android:textSize="@dimen/large_size_text"
			android:textStyle="bold"
			app:layout_constraintEnd_toStartOf="@+id/task_list_item__edit"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Task Name" />

	<TextView
			android:id="@+id/task_list_item__description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:textColor="@color/secondaryTextColor"
			android:textSize="@dimen/medium_size_text"
			app:layout_constraintEnd_toStartOf="@+id/task_list_item__edit"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/task_list_item__name"
			tools:text="Task Description: Placeholder Lorem Ipsim Dolor Sit Amet" />

	<ImageButton
			android:id="@+id/task_list_item__edit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:contentDescription="@string/edit_btn_desc"
			android:padding="16dp"
			app:layout_constraintDimensionRatio="H,1:1"
			app:layout_constraintEnd_toStartOf="@+id/task_list_item__delete"
			app:layout_constraintTop_toTopOf="@+id/task_list_item__delete"
			app:srcCompat="@android:drawable/ic_menu_edit" />

	<ImageButton
			android:id="@+id/task_list_item__delete"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:contentDescription="@string/app_name"
			android:padding="16dp"
			app:layout_constraintDimensionRatio="H,1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@android:drawable/ic_menu_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>