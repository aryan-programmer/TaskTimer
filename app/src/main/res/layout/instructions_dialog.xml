<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="?attr/dialogPreferredPadding"
	android:paddingEnd="?attr/dialogPreferredPadding"
	android:paddingBottom="?attr/dialogPreferredPadding"
	android:scrollbarStyle="outsideOverlay"
	style="@android:style/Widget.Material.Light.ScrollView">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/instructions__heading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textStyle="bold"
			android:text="@string/instructions_heading"
			android:textColor="?android:attr/textColorSecondary"
			android:textSize="@dimen/medium_size_text" />

		<TextView
			android:id="@+id/instructions__text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:autoLink="web"
			android:text="@string/instructions_descriptive"
			android:textColor="?android:attr/textColorSecondary"
			android:textSize="@dimen/medium_size_text" />
	</LinearLayout>

</ScrollView>